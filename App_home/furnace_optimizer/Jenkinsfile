pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'DZ_furnace-optimizer', 
                     url: 'https://github.com/VladislavLavrov/423901_devops_SuvorovOleg.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t furnace_app .'
            }
        }

        stage('Compose Up') {
            steps {
                sh 'docker compose up -d --build'
            }
        }
        
        stage('Health Check') {
            steps {
                // –ñ–¥–µ–º –∑–∞–ø—É—Å–∫–∞ –∏ –ø—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –æ—Ç–≤–µ—á–∞–µ—Ç
                sh '''
                    sleep 10
                    curl -f http://localhost:8000 || exit 1
                    echo "‚úÖ –ü—Ä–∏–ª–æ–∂–µ–Ω–∏–µ —É—Å–ø–µ—à–Ω–æ –∑–∞–ø—É—â–µ–Ω–æ!"
                '''
            }
        }
    }

    post {
        failure {
            echo "‚ùå –°–±–æ—Ä–∫–∞ –∑–∞–≤–µ—Ä—à–∏–ª–∞—Å—å —Å –æ—à–∏–±–∫–æ–π!"
        }
        success {
            echo "‚úÖ –°–±–æ—Ä–∫–∞ furnace-optimizer –∑–∞–≤–µ—Ä—à–µ–Ω–∞ —É—Å–ø–µ—à–Ω–æ!"
            echo "üåê –ü—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –¥–æ—Å—Ç—É–ø–Ω–æ –ø–æ –∞–¥—Ä–µ—Å—É: http://localhost:8000"
        }
        always {
            // –ê–∫–∫—É—Ä–∞—Ç–Ω–∞—è –æ—Å—Ç–∞–Ω–æ–≤–∫–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–æ–≤
            sh 'docker compose down || true'
        }
    }
}