@{
    ViewData["Title"] = "Simple Calculator";
}

<h2>@ViewData["Title"]</h2>
<form method="post" asp-controller="Calculator" asp-action="Calculate">
    @Html.AntiForgeryToken()
    <input type="text" name="num1" value="@ViewBag.Num1" required />
    <select name="operation" id="operation" required>
        <option value="Add" selected="@(ViewBag.Operation?.ToString() == "Add")">+</option>
        <option value="Subtract" selected="@(ViewBag.Operation?.ToString() == "Subtract")">-</option>
        <option value="Multiply" selected="@(ViewBag.Operation?.ToString() == "Multiply")">*</option>
        <option value="Divide" selected="@(ViewBag.Operation?.ToString() == "Divide")">/</option>
    </select>
    <input type="text" name="num2" value="@ViewBag.Num2" required />
    <input type="submit" value="Calculate" />
</form>

@if (ViewBag.Error != null)
{
    <h3 style="color: red;">@ViewBag.Error</h3>
}
else if (ViewBag.Result != null)
{
    <h3>Result: @ViewBag.Result</h3>
}
